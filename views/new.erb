<div id="newURLDiv">
	<form action="/new/" method="POST">
		New link:
		<input 
			name="new_url" 
			id="new_url" 
			size="15"
			onfocus="showDiv('newURLMoreDiv');"
		/>
		<input 
			type="submit" 
			value="Add"
			class="goAdd" 
		/>
		<div id="newURLMoreDiv">
			Link description: 
			<input 
				name="new_desc" 
				id="new_desc" 
				size="30"
			/>
			<a class="goCancel" href="#" onclick="hideDiv('newURLMoreDiv');">&nbsp;</a>
		</div>
	</form>
</div>


